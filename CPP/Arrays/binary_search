#include <iostream>
using namespace std;
int binarySearch(int arr[], int size, int key)
{
    int start = 0;
    int end = size - 1;
    int mid = start + (end - start)/2;  // When start and end are all about INT_MAX , then (start+end) of course will be overflow ! , To avoid this problem,we use it
    while (start <= end)
    {
        if (arr[mid] == key)
        {
            return mid;
        }
        // go to right wala part
        if (key > arr[mid])
        {
            start = mid + 1;
        }
        else
        {
            end = mid - 1;
        }
        mid = (start + end) / 2;
    }
    return -1;
}
int main()
{
    int even[6] = {2, 4, 6, 8, 12, 18};

    int evenIndex = binarySearch(even, 6, 4);

    cout << "index of 18-->" << evenIndex << endl;
    return 0;
}
